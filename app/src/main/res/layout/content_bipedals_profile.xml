<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".BipedalsProfile"
    tools:showIn="@layout/activity_bipedals_profile">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/profile_name"
                android:textSize="30sp"
                android:textColor="@color/profile_name"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_background"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileType_tag"
                    android:text="Breed:"
                    android:textColor="@color/profile_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileType"
                    android:textSize="20sp"
                    android:textColor="@color/animal_name"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>


            <!--    BORDER SEPARATOR START         -->

            <View android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                />

            <!--    BORDER SEPARATOR END         -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_background"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mother_tag"
                    android:text="Mother:"
                    android:textColor="@color/profile_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mother_name"
                    android:text="Bird"
                    android:textSize="20sp"
                    android:textColor="@color/animal_name"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>
            <!--    BORDER SEPARATOR START         -->

            <View android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                />

            <!--    BORDER SEPARATOR END         -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/gender_tag"
                    android:text="Gender:"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/profile_name"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profile_gender"
                    android:textSize="20sp"
                    android:textColor="@color/animal_name"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>

            <!--    BORDER SEPARATOR START         -->

            <View android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                />

            <!--    BORDER SEPARATOR END         -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthdate_tag"
                    android:text="Date of Birth:"
                    android:textColor="@color/profile_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthDate"
                    android:text="02/02/2018"
                    android:textSize="20sp"
                    android:textColor="@color/animal_name"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    />
            </LinearLayout>

            <!--    BORDER SEPARATOR START         -->

            <View android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                />

            <!--    BORDER SEPARATOR END         -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_background"
                android:weightSum="2"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/treatment_tag"
                    android:text="Treatment:"
                    android:textColor="@color/profile_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >

                    <!--<EditText-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:id="@+id/treatmentDate"-->
                        <!--android:hint="Date: 01/01/2001"-->
                        <!--android:layout_marginStart="10dp"-->
                        <!--android:background="@android:drawable/editbox_background"-->
                        <!--android:layout_marginRight="5dp"-->
                        <!--/>-->

                    <!--<EditText-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:id="@+id/profileComment"-->
                        <!--android:hint="Add title/Comment"-->
                        <!--android:maxLines="1"-->
                        <!--android:ellipsize="end"-->
                        <!--android:layout_marginStart="10dp"-->
                        <!--android:background="@android:drawable/editbox_background"-->
                        <!--/>-->


                <!--<EditText-->
                    <!--android:layout_width="250dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="3dp"-->
                    <!--android:id="@+id/detailedComment"-->
                    <!--android:hint="Add more details..."-->
                    <!--android:layout_marginStart="10dp"-->
                    <!--android:background="@android:drawable/editbox_background"-->
                    <!--/>-->

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="AddPopup"
                    android:text="Add"
                    android:textColor="@color/profile_name"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="start"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View"
                    android:textColor="@color/profile_name"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="end"
                    />

                    </LinearLayout>
            </LinearLayout>

            <View android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>